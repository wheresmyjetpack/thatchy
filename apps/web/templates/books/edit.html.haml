.row
  .col-12.col-sm-8
    .card
      .card-header
        %p.lead
          = "Editing "
          %em= book.title
      .card-block

        - unless params.valid?
          .errors
            %em.text-danger There was a problem with your submission
            %ul
              - params.error_messages.each do |msg|
                %li.text-danger= msg

        = render partial: 'form'

  .col-12.col-sm-4
    #root

#book-obj{'data-obj' => book.to_h.to_json}

  = javascript "#{ENV['ASSETS_HOST']}/assets/test.bundle"
